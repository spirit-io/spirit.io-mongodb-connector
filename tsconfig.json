{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node"
    },
    "paths": {
      "spirit/*": ["./lib/*"]
    },
    "filesGlob": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
