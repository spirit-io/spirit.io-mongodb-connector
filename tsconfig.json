{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "inlineSources": false,
    "outDir": "dist",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "jsx": "None"
  },
  "paths": {
    "spirit.io/lib/*": [
      "node_modules/spirit.io/src/*"
    ]
  },
  "filesGlob": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage"
  ]
}