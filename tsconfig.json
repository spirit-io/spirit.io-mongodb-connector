{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "noEmitOnError": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "strictNullChecks": false
    },
    "paths": {
      "spirit.io/lib/*": ["node_modules/spirit.io/src/*"]
    },
    "filesGlob": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "coverage"
    ]
}